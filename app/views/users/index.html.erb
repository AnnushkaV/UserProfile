<div class="col-md-6">
  <% provide(:title, 'All users') %>
  <h1>All users</h1>

  <table>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

    <% @users.each do |user| %>
        <tr>
          <td><%= user.name%></td>
          <td><%=link_to 'Send Message', new_message_path(reciver_id: user.id), class: "btn btn-primary btn-xs start-conversation",
                  "data-sid" => current_user.id, "data-rip" => user.id%></td>
        </tr>
    <% end %>
  </table>
</div>
