
<%= form_tag messages_path, :method => 'get' do %>
 <div class="col-sm-5" id="message-form">
     <%= text_field_tag :search, params[:search], class: "form-control" , style: "width: 200px; float: left; margin-right: 5px" %>
     <% if params[:user_id] %>
       <%= hidden_field_tag "user_id", params[:user_id]%>
     <%end%>
   <%= submit_tag "Submit", :name => nil, class: "btn btn-primary btn-sm" , style: "height: 33px"%>
   <div class="clearfix"></div>
 </div>
 <%= collection_select :message, :user_id, User.all, :id, :name,  {:selected => params[:message] ? params[:message][:user_id] : nil}, {class: "form-control chosen-it", :style => 'width: 200px', :onchange => "this.form.submit()"} %>

<%= will_paginate @messages %>

<% end %>
