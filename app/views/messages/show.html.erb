<h3>ALL messages</h3>

<%= form_tag messages_path, :method => 'get' do %>
    <p>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search", :name => nil%>
    </p>
<% end %>


<%= will_paginate @messages %>

<ul class="messages">
  <% @messages.each do |message| %>
      <li>

        <span class="sender">From: <%= message.sender.name %>=></span>&nbsp &nbsp &nbsp
        <span class="reciver">To: <%= message.reciver.name %></span> &nbsp &nbsp &nbsp
        <span class="content"><%= message.body %></span>&nbsp &nbsp
        <span class="create">Create: <%= message.created_at %></span>
      </li>
  <% end %>
</ul>
